{
  "name": "remark",
  "private": true,
  "license": "MIT",
  "homepage": "https://remark.js.org",
  "repository": "https://github.com/remarkjs/remark",
  "bugs": "https://github.com/remarkjs/remark/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "type": "module",
  "workspaces": [
    "packages/remark-parse/",
    "packages/remark-stringify/",
    "packages/remark/",
    "packages/remark-cli/"
  ],
  "devDependencies": {
    "@types/mdast": "^4.0.0",
    "@types/node": "^20.0.0",
    "c8": "^8.0.0",
    "camelcase": "^8.0.0",
    "execa": "^8.0.0",
    "mdast-util-assert": "^5.0.0",
    "mdast-util-gfm": "^3.0.0",
    "micromark-extension-gfm": "^3.0.0",
    "prettier": "^3.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "^5.0.0",
    "unified": "^11.0.0",
    "unist-util-remove-position": "^5.0.0",
    "xo": "^0.56.0"
  },
  "scripts": {
    "#": "./packages/remark-cli/cli.js . -qfo",
    "prepack": "npm run build && npm run format",
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "format": "prettier . -w --log-level warn && xo --fix",
    "test-api": "npm run test --workspaces && node --conditions development test/index.js",
    "test-coverage": "c8 --100 --reporter lcov npm run test-api",
    "test": "npm run build && npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-wooorm",
      [
        "remark-lint-no-html",
        false
      ]
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "strict": true,
    "ignoreCatch": true
  },
  "xo": {
    "prettier": true,
    "rules": {
      "unicorn/prefer-string-replace-all": "off"
    }
  }
}
